<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="120dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageview_latest_message"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:civ_border_width="4dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            tools:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/latest_message_usernameview"
            app:layout_constraintStart_toEndOf="@+id/imageview_latest_message"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    <TextView
            android:text="Latest Message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/latest_message_textview"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageview_latest_message"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/latest_message_usernameview"
            app:layout_constraintVertical_bias="0.314"
            android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>